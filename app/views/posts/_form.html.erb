<%= form_with(model: post) do |form| %>
  <%= render "layouts/validation", item: @post %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form_control" %>
    <%# <%= form.hidden_field :photo_cache %> 

    <%# <% if @post.photo.present? %>
      <%# <%= image_tag @post.photo.thumb.url, class: "mt-4" %> 
    <%# <% end %>
  </div>

  <div>
    <%= form.label :pictures %>
    <%= form.file_field :pictures, multiple:true,  class: "form_control" %>
  </div>

  <div class="form-group">
    <% if can? :create, post %>
      <%= form.submit "Create Post", class: "btn btn-lg btn-success " %>
    <%end%>  
  </div>

  

 
<% end %>
