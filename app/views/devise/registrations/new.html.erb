<section class="form-auth text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class= "h3 mb-3 font-weight-normal">Please Sign Up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <% if resource.avatar.attached?%>
        <%= image_tag(resource.avatar) %>
      <%else%>
      <%= image_tag("/default_profile.jpg") %>
      <%end%>
    </div>
    
      <%= f.email_field :email, class:"form-control", placeholder: "Email address", autocomplete: "email" %>
    
      <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password",class: "form-control" %> 
    
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password conformation" %>

    <button class= "btn btn-lg btn-primary btn-block" type="submit" >Sign Up</button>
  <% end %>
  <%= render "devise/shared/links" %>
</section>