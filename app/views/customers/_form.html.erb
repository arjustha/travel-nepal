<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :numbers %>
    <%= form.number_field :numbers, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :destination %>
    <%= select_tag 'state',
    options_from_collection_for_select(@destinations, 'id', 'name', 15),
    :include_blank => true %>
  </div>

  <div class="form-group">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
